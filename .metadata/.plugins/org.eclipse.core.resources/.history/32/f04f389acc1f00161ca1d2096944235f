package com.example.app3;

import android.os.Bundle;
import android.app.Activity;
import android.view.Menu;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;

public class MainActivity3 extends Activity {
	 boolean mAddition,mSub,mMul,mDiv;
		
     float x=0;
     float y=0;
     
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main_activity3);
       
        Button b1=(Button)findViewById(R.id.button1);
        Button b2=(Button)findViewById(R.id.button2);
        Button b3=(Button)findViewById(R.id.button3);
        Button b4=(Button)findViewById(R.id.button4);
        Button b5=(Button)findViewById(R.id.button5);
        Button b6=(Button)findViewById(R.id.button6);
        Button b7=(Button)findViewById(R.id.button7);
        Button b8=(Button)findViewById(R.id.button8);
        Button b9=(Button)findViewById(R.id.button9);
        Button b0=(Button)findViewById(R.id.button10);
        Button bs=(Button)findViewById(R.id.button11);
        Button bm=(Button)findViewById(R.id.button12);
        Button bans=(Button)findViewById(R.id.button13);
        Button ba=(Button)findViewById(R.id.button14);
        Button bd=(Button)findViewById(R.id.button15);
        Button bcl=(Button)findViewById(R.id.button16);
        final EditText edt1;
        edt1=(EditText)findViewById(R.id.textView1);
        
        b1.setOnClickListener(new View.OnClickListener() {
			
			@Override
			public void onClick(View v) {
				edt1.setText(edt1.getText()+"1");
				
			}
		});
 b2.setOnClickListener(new View.OnClickListener() {
			
			@Override
			public void onClick(View v) {
				edt1.setText(edt1.getText()+"2");
				
			}
		});
 b3.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			edt1.setText(edt1.getText()+"3");
			
		}
	});
 b4.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			edt1.setText(edt1.getText()+"4");
			
		}
	});
 b5.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			edt1.setText(edt1.getText()+"5");
			
		}
	});
 b6.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			edt1.setText(edt1.getText()+"6");
			
		}
	});
 b7.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			edt1.setText(edt1.getText()+"7");
			
		}
	});
 b8.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			edt1.setText(edt1.getText()+"8");
			
		}
	});
 b9.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			edt1.setText(edt1.getText()+"9");
			
		}
	});
 b0.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			edt1.setText(edt1.getText()+"0");
			
		}
	});
 ba.setOnClickListener(new View.OnClickListener() {
		
		@SuppressWarnings("null")
		@Override
		public void onClick(View v) {
			if(edt1==null)
			{ edt1.setText("");}
			else
			{
				x=Float.parseFloat(edt1.getText() + "");
				mAddition=true;
				edt1.setText(null);
			}
			
		}
	});
 bs.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			
			x=Float.parseFloat(edt1.getText()+"");
			mSub=true;
			edt1.setText(null);
		}
	});
 bm.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			
			x=Float.parseFloat(edt1.getText()+"");
			mMul=true;
			edt1.setText(null);
		}
	});
 bd.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			
			x=Float.parseFloat(edt1.getText()+"");
			mDiv=true;
			edt1.setText(null);
		}
	});
 bans.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			
			y=Float.parseFloat(edt1.getText()+"");
			if(mAddition==true)
			{
				edt1.setText(x + y+" ");
				mAddition=false;
			}
			if(mSub==true)
			{
				edt1.setText(x - y+" ");
				mAddition=false;
			}if(mMul==true)
			{
				edt1.setText(x * y+" ");
				mAddition=false;
			}if(mDiv==true)
			{
				edt1.setText(x / y+" ");
				mAddition=false;
			}
		}
	});
 bcl.setOnClickListener(new View.OnClickListener() {
		
		@Override
		public void onClick(View v) {
			
			
			edt1.setText(edt1.getText()+".");
		}
	});
    }


    @Override
    public boolean onCreateOptionsMenu(Menu menu) {
        // Inflate the menu; this adds items to the action bar if it is present.
        getMenuInflater().inflate(R.menu.main_activity3, menu);
        return true;
    }
    
}
